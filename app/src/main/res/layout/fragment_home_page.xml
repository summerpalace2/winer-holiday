<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".View.ui.HomeActivity">

    <!-- TODO: Update blank fragment layout -->

    <Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="                          破浪新闻"
        android:background="#E0F7FA"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        android:background="@color/littlebule"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="每日笑话:"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:padding="16dp"/>
    </ScrollView>
    <ImageView
        android:id="@+id/im_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloud"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_seek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="今日天气"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/im_cloud"
        app:layout_constraintTop_toBottomOf="@id/scrollView"/>
    <EditText
        android:id="@+id/ed_region"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="地区:"
        android:textColor="@color/black"
        android:background="#FFFFE0"
        app:layout_constraintTop_toBottomOf="@id/im_cloud"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="搜索"
        android:textColor="@color/black"
        android:background="@drawable/selector_button2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ed_region"/>
    <ImageButton
        android:id="@+id/ib_cloud"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#E0F7FA"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/ed_region"/>
    <TextView
        android:id="@+id/tv_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="江津"
        android:textColor="#004D40"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/ib_cloud"
        app:layout_constraintLeft_toLeftOf="@id/ib_cloud"
        app:layout_constraintRight_toRightOf="@id/ib_cloud"/>
    <ImageView
        android:id="@+id/im_weather"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/qing"
        app:layout_constraintTop_toBottomOf="@id/tv_area"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30℃"
        android:textSize="18dp"
        android:textColor="#004D40"
        app:layout_constraintTop_toBottomOf="@id/im_weather"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="晴"
        android:textSize="18dp"
        android:textColor="#004D40"
        app:layout_constraintTop_toBottomOf="@id/tv_temperature"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_temperatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8℃-11℃"
        android:textSize="19dp"
        android:textColor="#004D40"
        app:layout_constraintTop_toBottomOf="@id/tv_weather"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日出7:20~日落18:40"
        android:textColor="#004D40"
        android:textSize="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_temperatures"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无论如何，今天就是最美好的!"
        android:textColor="#004D40"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>